<ul>
<% @user.errors.full_messages.each do |msg| %>
<li>
<%= msg %>
</li>
<% end %>
</ul>
<%= form_for @user do |f| %>
  Username: <%= f.text_field :username, placeholder: "username"%><br /><br />
  Email: <%= f.email_field :email, placeholder: "example@email.here" %> <br /><br />
  Password: <%= f.password_field :password, placeholder: "**********" %> <br /><br />
  <%= f.submit %>
<% end %>
